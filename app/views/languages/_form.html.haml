= simple_form_for @language, html: {class: 'row'} do |f|
  - if @language.errors.any?
    #error_explanation
      %h2= "#{pluralize(@language.errors.count, "error")} prohibited this language from being saved:"
      %ul
        - @language.errors.full_messages.each do |msg|
          %li= msg

  = f.input :name
  = f.input :experience, as: :string
  .actions
    = f.submit t('actions.save'), class: "waves-effect waves-light btn"
