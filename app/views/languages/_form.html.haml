= simple_form_for @language, html: {class: 'row'} do |f|
  - if @language.errors.any?
    #error_explanation
      %h2= "#{pluralize(@language.errors.count, "error")} prohibited this language from being saved:"
      %ul
        - @language.errors.full_messages.each do |msg|
          %li= msg

  = f.input :name, as: :select, collection: LanguageList::COMMON_LANGUAGES.sort_by!{ |x| x.name }.map(&:name), input_html: { class: "browser-default" }
  = f.input :experience, as: :string
  = f.input :certificate, as: :file, class: "browser-default"
  .actions
    = button_tag t('actions.save'), class: "waves-effect waves-light btn"
