%h1= t("language.title.index")

%table
  %thead
    %tr
      %th=t("simple_form.labels.language.name")
      %th= t("simple_form.labels.language.experience")
      %th{colspan: 3}

  %tbody
    - @languages.each do |language|
      %tr
        %td= language.name
        %td= language.experience
        %td= link_to t('actions.show'), language
        %td= link_to t('actions.edit'), edit_language_path(language)
        %td= link_to t('actions.destroy'), language, :method => :delete, :data => { :confirm => t("actions.destroy_confirmation") }

%br

= link_to t('language.title.add'), new_language_path
