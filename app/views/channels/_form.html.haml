= simple_form_for @channel, html: {class: 'row channel'} do |f|
  - if @channel.errors.any?
    #error_explanation
      %h2= "#{pluralize(@channel.errors.count, "error")} prohibited this channel from being saved:"
      %ul
        - @channel.errors.full_messages.each do |msg|
          %li= msg

  = text_field_tag :message, ""
  .actions
    = button_tag t('actions.save'), class: "waves-effect waves-light btn"
