%h1= t("notification.index.title")

%table
  %thead
    %tr
      %th= t("simple_form.labels.notification.title")
      %th= t("simple_form.labels.notification.content")
      %th= t("simple_form.labels.notification.sender")
      %th{colspan: 3}

  %tbody
    - @notifications.each do |notification|
      %tr
        %td= notification.title
        %td= notification.content
        %td= notification.sender.nickname
        %td= link_to t('actions.show'), notification
        %td= link_to t('actions.edit'), edit_notification_path(notification)
        %td= link_to t('actions.destroy'), notification, method: :delete, data: { confirm:  t('actions.destroy_confirmation') }
