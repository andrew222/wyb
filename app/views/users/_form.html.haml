= simple_form_for @user, html: {class: 'row user'} do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  = f.input :email
  = f.input :nickname
  = f.input :first_name
  = f.input :last_name
  = f.input :avatar, as: :file, class: "browser-default"
  = f.input :password
  = f.input :password_confirmation
  = f.input :birthday, as: :date, order: [:year, :month, :day], use_month_names: (1..12).to_a, input_html: {class: "browser-default col l4 m4 s12"}
  = f.input :born_at
  .actions
    = f.submit t('actions.save'), class: "waves-effect waves-light btn"
