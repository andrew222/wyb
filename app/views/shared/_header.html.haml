%nav
  .nav-wrapper
    = link_to "Waiyubang", "/"
    %ul.right.hide-on-med-and-down
      - if current_user.blank?
        %li= link_to t("actions.login"), login_path
      - else
        %li
          = link_to "#!", class: "setting-dropdown-btn", data: {activates: "setting-dropdown"} do
            %i.material-icons.right settings
          %ul.dropdown-content#setting-dropdown
            %li= link_to t("shared.profile"), edit_user_path(current_user)
            %li= link_to t("actions.logout"), logout_path
